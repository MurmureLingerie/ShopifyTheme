[
  {
    "name": "theme_info",
    "theme_name": "MarieMur Theme",
    "theme_version": "1.0.0",
    "theme_author": "MurmureLingerie",
    "theme_documentation_url": "https://github.com/MurmureLingerie/ShopifyTheme"
  },
  {
    "name": "Couleurs",
    "settings": [
      {
        "type": "color",
        "id": "color_primary",
        "label": "Couleur Principale",
        "default": "#000000"
      },
      {
        "type": "color",
        "id": "color_accent",
        "label": "Couleur d'Accent",
        "default": "#C5A572"
      },
      {
        "type": "color",
        "id": "color_background",
        "label": "Couleur de Fond",
        "default": "#FFFFFF"
      }
    ]
  },
  {
    "name": "Logo",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo de votre marque"
      },
      {
        "type": "range",
        "id": "logo_width",
        "min": 50,
        "max": 300,
        "step": 10,
        "default": 150,
        "unit": "px",
        "label": "Largeur du logo"
      }
    ]
  },
  {
    "name": "Typographie",
    "settings": [
      {
        "type": "font_picker",
        "id": "font_heading",
        "label": "Police des titres",
        "default": "playfair_display_n4"
      },
      {
        "type": "font_picker",
        "id": "font_body",
        "label": "Police du texte",
        "default": "inter_n4"
      }
    ]
  }
