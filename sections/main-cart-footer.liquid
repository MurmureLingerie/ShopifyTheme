{% if cart.item_count > 0 %}
  <div class="section">
    <div class="page-width">
      <div class="cart-footer">
        <div class="cart-total">
          <h2>Total: {{ cart.total_price | money }}</h2>
        </div>
        
        <div class="cart-actions">
          <a href="/collections" class="button button--secondary">
            Continuer les achats
          </a>
          <button type="submit" name="checkout" class="button cart__checkout-button">
            Finaliser la commande
          </button>
        </div>
      </div>
    </div>
  </div>
{% endif %}

<style>
  .cart-footer {
    text-align: center;
    padding: 2rem 0;
    border-top: 2px solid var(--color-border);
  }
  
  .cart-total {
    margin-bottom: 2rem;
  }
  
  .cart-total h2 {
    font-size: 1.5rem;
    color: var(--color-accent);
  }
  
  .cart-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }
</style>

{% schema %}
{
  "name": "Cart Footer",
  "settings": []
}
{% endschema %}