<div class="collection-hero section">
  <div class="page-width">
    {% if collection.image %}
      <div class="collection-hero__image">
        {{ collection.image | image_url: width: 1200 | image_tag: alt: collection.title }}
      </div>
    {% endif %}
    
    <div class="collection-hero__content">
      <h1 class="collection-hero__title">{{ collection.title | default: 'Collection' }}</h1>
      {% if collection.description != blank %}
        <div class="collection-hero__description">
          {{ collection.description }}
        </div>
      {% endif %}
    </div>
  </div>
</div>

<style>
  .collection-hero {
    padding: 2rem 0;
    text-align: center;
  }
  
  .collection-hero__title {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }
  
  .collection-hero__description {
    font-size: 1.1rem;
    color: var(--color-text-light);
    max-width: 600px;
    margin: 0 auto;
  }
</style>

{% schema %}
{
  "name": "Collection Banner",
  "settings": []
}
{% endschema %}
