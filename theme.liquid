<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <meta name="theme-color" content="#000000">

  <title>
    {{ page_title }}
    {%- unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless -%}
  </title>

  {% if page_description %}
    <meta name="description" content="{{ page_description | escape }}">
  {% endif %}

  {{ content_for_header }}

  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Playfair+Display:wght@300;400;500;600;700&display=swap" rel="stylesheet">

  <!-- CSS Variables -->
  <style>
    :root {
      --color-primary: {{ settings.color_primary | default: '#000000' }};
      --color-accent: {{ settings.color_accent | default: '#C5A572' }};
      --color-background: {{ settings.color_background | default: '#FFFFFF' }};
      --font-heading: 'Playfair Display', serif;
      --font-body: 'Inter', sans-serif;
    }
  </style>

  {{ 'application.css' | asset_url | stylesheet_tag }}
</head>

<body class="template-{{ template.name }}">
  <div id="shopify-section-header">{% section 'header' %}</div>
  
  <main id="MainContent" role="main">
    {{ content_for_layout }}
  </main>

  <div id="shopify-section-footer">{% section 'footer' %}</div>

  {{ 'application.js' | asset_url | script_tag }}
</body>
</html>
